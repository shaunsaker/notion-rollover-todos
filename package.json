{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "A script that generates a new Notion page every day based on the previous dayâ€™s template. It also removes completed TODOs.",
  "author": "Shaun Saker <sakershaun@gmail.com>",
  "license": "Apache-2.0",
  "main": "build/src/main.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "npx vite-node -w ./src/main.ts",
    "lint": "npm-run-all --parallel lint:*",
    "lint:prettier": "prettier -c \"**/*.{ts,tsx}\"",
    "lint:eslint": "eslint --ext [.ts,.tsx] .",
    "lint:ts": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "tsc -p tsconfig.release.json"
  },
  "engines": {
    "node": ">= 18.12 <19"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "tslib": "~2.4"
  },
  "devDependencies": {
    "@types/jest": "~29.2",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~5.44",
    "@typescript-eslint/parser": "~5.44",
    "eslint": "~8.28",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~27.1",
    "husky": "^8.0.0",
    "jest": "~29.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.8",
    "ts-jest": "~29.0",
    "tsutils": "~3.21",
    "typescript": "~4.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
